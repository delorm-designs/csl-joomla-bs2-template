<?xml version="1.0" encoding="utf-8"?>
<form>

	<fields name="thememagic" addfieldpath="/plugins/system/t3/includes/depend">

        <fieldset name="base_params" label="Base">
            <field name="bodyBackground" type="color" class="t3tm-color" label="T3_TM_VARS_BODY_BKG_LABEL" description="T3_TM_VARS_BODY_BKG_DESC" />
            <field name="textColor" type="color" class="t3tm-color" label="T3_TM_VARS_TEXT_COLOR_LABEL" description="T3_TM_VARS_TEXT_COLOR_DESC" />


            <field name="linkColor" type="color" class="t3tm-color" label="T3_TM_VARS_LINK_COLOR_LABEL" description="T3_TM_VARS_LINK_COLOR_DESC" />

            <field name="linkColorHover" type="color" class="t3tm-color" label="Link Color Hover" description="T3_TM_VARS_LINK_COLOR_DESC" />

            <field name="linkFontWeight" type="list" label="Link Bold" description="T3_TM_VARS_LINK_COLOR_DESC">
			
							<option value="">JDEFAULT</option>
				<option value="bold">Bold</option>
				<option value="normal">Normal</option>

			</field>>



        </fieldset>



        <fieldset name="form_params" label="Forms">
            <field name="formLabelFontColor" type="color"  default="" class="t3tm-color" label="Label Font Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />
            <field name="formInputBorderColor" type="color"  default="" class="t3tm-color" label="Input Border Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />
            <field name="formInputBackgroundColor" type="color"  default="" class="t3tm-color" label="Input Background Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />
            <field name="formAddOnBackgroundColor" type="color"  default="" class="t3tm-color" label="Input Add-On Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />
        </fieldset>

        <fieldset name="module_params" label="T3_TM_MODULE">
            <field name="moduleTitleFontColor" type="color" class="t3tm-color" label="T3_TM_VARS_MODULE_TITLE_COLOR_LABEL" description="T3_TM_VARS_MODULE_TITLE_COLOR_DESC" />
            <field name="moduleTitleBackground" type="color" class="t3tm-color" label="T3_TM_VARS_MODULE_TITLE_BGCOLOR_LABEL" description="T3_TM_VARS_MODULE_TITLE_BGCOLOR_DESC" />
        </fieldset>


        <fieldset name="navigation_params" label="Navigation">
	        <field name="navigation_params_default" type="t3depend" function="@group">
				<option for="accordionFontFamily" value="undefined">accordionFontFamily_custom</option>
			</field>



            <field type="spacer" name="adropdownspacer" label="Dropdown Parameters&lt;hr style=&quot;margin: 0px; border-color: #666666;&quot;/&gt;" />
            <field name="dropdownBaseFontColor" type="color"  default="#546A16" class="t3tm-color" label="Base Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />
            <field name="dropdownHoverFontColor" type="color"  default="#2D679A" class="t3tm-color" label="Hover Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />
            <field name="dropdownActiveFontColor" type="color"  default="#2D679A" class="t3tm-color" label="Hover Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />
            <field name="dropdownBackgroundHover" type="color"  default="#2D679A" class="t3tm-color" label="Hover Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />
            <field name="dropdownBackgroundActive" type="color"  default="#2D679A" class="t3tm-color" label="Hover Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />


            <field type="spacer" name="acollaspedspacer" label="Accordion Collapsed Parameters&lt;hr style=&quot;margin: 0px; border-color: #666666;&quot;/&gt;" />
            <field name="accordionCollapsedBaseColor" type="color"  default="#546A16" class="t3tm-color" label="Base Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />
            <field name="accordionCollapsedHoverColor" type="color"  default="#2D679A" class="t3tm-color" label="Hover Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />
            <field name="accordionCollapsedActiveColor" type="color"  default="#2D679A" class="t3tm-color" label="Hover Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />

            <field type="spacer" name="aexpandedspacer" label="Accordion Expanded Parameters&lt;hr style=&quot;margin: 0px; border-color: #666666;&quot;/&gt;" />
            <field name="accordionExpandedBaseColor" type="color"  default="#A6B281" class="t3tm-color" label="Base Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />
            <field name="accordionExpandedHoverColor" type="color"  default="#2D679A" class="t3tm-color" label="Hover Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />
            <field name="accordionExpandedActiveColor" type="color"  default="#2D679A" class="t3tm-color" label="Hover Color" description="T3_TM_VARS_TEXT_COLOR_DESC" />





			<field name="accordionFontSize" type="text" size="10" class="input-tiny t3tm-dimension" 
				label="T3_TM_VARS_FONTSIZE_LABEL"
				description="T3_TM_VARS_FONTSIZE_DESC" />

			<field name="accordionFontFamily" type="list"
				label="T3_TM_VARS_FONTFAMILY_LABEL" 
				description="T3_TM_VARS_FONTFAMILY_DESC" >
				<option value="">JDEFAULT</option>
				<option value="sans-serif">T3_TM_VARS_FONTFAMILY_SANS_SERIF</option>
				<option value="serif">T3_TM_VARS_FONTFAMILY_SERIF</option>
				<option value="monospace">T3_TM_VARS_FONTFAMILY_MONOSPACE</option>
				<option value="undefined">T3_TM_VARS_FONTFAMILY_CUSTOM</option>  
			</field>
			<field name="accordionFontFamily_custom" type="text" size="30"
				label="T3_TM_VARS_FONTFAMILY_CUSTOM_LABEL"
				description="T3_TM_VARS_FONTFAMILY_CUSTOM_DESC" />





        </fieldset>
		






		<fieldset name="typo_params" label="T3_TM_TYPO">
			<field name="typo_params_default" type="t3depend" function="@group">
				<option for="baseFontFamily" value="undefined">baseFontFamily_custom</option>
				<option for="headingsFontFamily" value="undefined">headingsFontFamily_custom</option>
			</field>

			<field name="baseFontSize" type="text" size="10" class="input-tiny t3tm-dimension" 
				label="T3_TM_VARS_FONTSIZE_LABEL"
				description="T3_TM_VARS_FONTSIZE_DESC" />

			<field name="baseFontFamily" type="list"
				label="T3_TM_VARS_FONTFAMILY_LABEL" 
				description="T3_TM_VARS_FONTFAMILY_DESC" >
				<option value="">JDEFAULT</option>
				<option value="sans-serif">T3_TM_VARS_FONTFAMILY_SANS_SERIF</option>
				<option value="serif">T3_TM_VARS_FONTFAMILY_SERIF</option>
				<option value="monospace">T3_TM_VARS_FONTFAMILY_MONOSPACE</option>
				<option value="undefined">T3_TM_VARS_FONTFAMILY_CUSTOM</option>  
			</field>
			<field name="baseFontFamily_custom" type="text" size="30"
				label="T3_TM_VARS_FONTFAMILY_CUSTOM_LABEL"
				description="T3_TM_VARS_FONTFAMILY_CUSTOM_DESC" />

			<field name="headingsFontFamily" type="list"
				label="T3_TM_VARS_HEADINGFONTFAMILY_LABEL" 
				description="T3_TM_VARS_HEADINGFONTFAMILY_DESC" >
				<option value="">JDEFAULT</option>
				<option value="sans-serif">T3_TM_VARS_FONTFAMILY_SANS_SERIF</option>
				<option value="serif">T3_TM_VARS_FONTFAMILY_SERIF</option>
				<option value="monospace">T3_TM_VARS_FONTFAMILY_MONOSPACE</option>
				<option value="undefined">T3_TM_VARS_FONTFAMILY_CUSTOM</option>  
			</field>
			<field name="headingsFontFamily_custom" type="text" size="30"
				label="T3_TM_VARS_FONTFAMILY_CUSTOM_LABEL"
				description="T3_TM_VARS_FONTFAMILY_CUSTOM_DESC" />

		</fieldset> 

		<fieldset name="links_params" label="T3_THEMER_FOOTER">
			<field name="T3FooterModuleTitleColor" type="color" class="t3tm-color" label="T3_VARS_FOOTER_MOD_TCOLOR_LABEL" description="T3_VARS_FOOTER_MOD_TCOLOR_DESC" />
			<field name="T3FooterModuleColor" type="color" class="t3tm-color" label="T3_VARS_FOOTER_MOD_COLOR_LABEL" description="T3_VARS_FOOTER_MOD_COLOR_DESC" />
		</fieldset>

	</fields>
</form>